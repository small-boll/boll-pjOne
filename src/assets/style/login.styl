.login-template
  width 100%
  height 100%
  position relative
  overflow hidden
  .login-bg
    width 100%
    height 100%
    object-fit fill
  .lt-box
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -52%)
    width 360px
    height 200px
    border 1px solid #fff
    color #fff
  .submit-box
    width 100%
    display flex
    justify-content center
    .el-button
      width 65%
      background-color #0e5dd3
>>>.el-form-item__label
  color #fff
>>>.el-input__inner
  color #fff
  background-color transparent
  border none
  border-bottom 1px solid #DCDFE6
